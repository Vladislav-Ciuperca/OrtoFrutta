<mvc:View controllerName="gestionalerepartofruttacoop.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
    xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
    height="100%">
	
	
	<f:DynamicPage id="PageId" preserveHeaderStateOnScroll="true" headerExpanded="{/headerExpanded}" showFooter="true" fitContent="true">
		
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{i18n>Titolo}"/>
					</f:heading>
					<!-- <f:expandedContent>
						<Label text="This is a subheading"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label text="This is a subheading"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title text="This is a subheading"/>
					</f:snappedTitleOnMobile> -->

					<!-- <f:content>
						<OverflowToolbar>
							<GenericTag text="SR"
								status="Error"
								press="onGenericTagPress"
								design="StatusIconHidden">
								<ObjectNumber number="2"
									unit="M"
									emphasized="false"
									state="Error"/>
							</GenericTag>
						</OverflowToolbar>
					</f:content> -->

<!-- bottoni in alto a destra -->
					<f:actions>
						<ToolbarSpacer/>
						<Button
								text="{i18n>button_edita}"
								type="Emphasized"/>
						<Button
								text="{i18n>button_elimina}"
								type="Transparent"/>
						<!-- <Button
								text="Copy"
								type="Transparent"/>
						<Button
								icon="sap-icon://action"
								type="Transparent"/> -->
					</f:actions>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
						<FlexBox
								alignItems="Start"
								justifyContent="SpaceBetween">
							<items>
								<Panel
										backgroundDesign="Transparent"
										class="sapUiNoContentPadding">
									<content>
										<layout:HorizontalLayout
												allowWrapping="true">
											<layout:VerticalLayout
													class="sapUiMediumMarginEnd">
												<ObjectAttribute title="{i18n>title_posizione}" text="{i18n>text_magazzino}"/>
												<ObjectAttribute title="{i18n>title_corridoio}" text="{i18n>text_corridoio}"/>
												<ObjectAttribute title="{i18n>title_rastrelliera}" text="{i18n>text_rastrelliera}"/>
											</layout:VerticalLayout>
											<layout:VerticalLayout>
												<ObjectAttribute title="{i18n>title_disponibilità}"/>
												<ObjectStatus text="{i18n>text_disponibilità}" state="Success" />
											</layout:VerticalLayout>
										</layout:HorizontalLayout>
									</content>
								</Panel>
							</items>
						</FlexBox>
				</f:DynamicPageHeader>
			</f:header>

			<f:content>
				<t:Table
						rows="{/ProductCollection}"
						selectionMode="MultiToggle"
						rowMode="Auto">
					<t:extension>
						<OverflowToolbar style="Clear">
							<Title text="{i18n>tabella_prodotti}"/>
						</OverflowToolbar>
					</t:extension>
					<t:columns>
						<t:Column width="11rem">
							<Label text="{i18n>nome_prodotto}" />
							<t:template>
								<Text text="{Name}" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column width="11rem">
							<Label text="{i18n>ID_prodotto}" />
							<t:template>
								<Input value="{ProductId}"/>
							</t:template>
						</t:Column>
						<t:Column width="6rem" hAlign="End">
							<Label text="{i18n>text_quantità}" />



							
							<t:template>
								<Label text="asd" />
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Data ultimo aggiornmento" />
							<!-- controllare status  -->
							<t:template>
								<ObjectStatus text="asd"/>
							</t:template>
						</t:Column>



						<t:Column width="9rem">
							<Label text="{i18n>prezzo}" />
							<!-- prezzo -->
							<t:template>
								<u:Currency value="{Price}" currency="{CurrencyCode}"/>
							</t:template>
						</t:Column>
						<t:Column width="12rem">
							<Label text="{i18n>sconto}" />
							<t:template>
								<ComboBox value="{SupplierName}" items="{/Suppliers}">
									<c:Item text="{Name}"/>
								</ComboBox>
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Image" />
							<t:template>
								<Link text="Show Image" href="{ProductPicUrl}" target="_blank"/>
							</t:template>
						</t:Column> 
						<t:Column width="9rem">
							<Label text="Details" />
							<t:template>
								<Button text="Show Details" press="handleDetailsPress"/>
							</t:template>
						</t:Column> 
						<t:Column width="7rem">
							<Label text="Heavy Weight" />
							<t:template>
								<CheckBox selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}"/>
							</t:template>
						</t:Column>
						<t:Column width="12rem">
							<Label text="{i18n>categoria}" />
							<t:template>
								<Select selectedKey="{Category}" items="{/Categories}">
									<c:Item text="{Name}" key="{Name}"/>
								</Select>
							</t:template>
						</t:Column>
						<t:Column width="6rem" hAlign="Center">
							<Label text="Status" />
							<t:template>
								<c:Icon src="{
								path: 'Available',
								formatter: '.formatAvailableToIcon'
							}"/>
							</t:template>
						</t:Column>
						<t:Column width="11rem" hAlign="Center">
							<Label text="{i18n>data}" />
							<t:template> 
								<DatePicker value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>
			</f:content>
			<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button type="Accept" text="Accetta"/>
					<Button type="Reject" text="Rifiuta"/>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>


	

</mvc:View>

